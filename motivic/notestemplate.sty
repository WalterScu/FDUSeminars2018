\theoremstyle{remark}
\newtheorem{rem}{Remark}[section]
\newtheorem{warn}{Warning!}
\newtheorem{conve}[rem]{Conventions}
\newtheorem{nota}[rem]{Notations}
\newtheorem{ex}[rem]{Examples}

